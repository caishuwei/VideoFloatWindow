<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csw.android.videofloatwindow">

    <!--bugly需要网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--前台服务实现后台播放-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!--系统对话框权限实现悬浮窗-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--本地文件读写-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--播放视频时屏幕维持唤醒-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.list.PlaySheetVideosActivity" />

        <!--全屏播放界面，为实现在其他应用中小窗口与全屏模式切换，此Activity运行在特定Activity栈中-->
        <activity
            android:name=".ui.FullScreenActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard|screenLayout"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:mimeType="video/*"
                    android:scheme="content" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.base.CommonActivity" />

        <service
            android:name=".player.service.PlayService"
            android:exported="false" />
    </application>
</manifest>
