<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.csw.android.videofloatwindow.player.window.FloatWindowVideoContainer
        android:id="@+id/videoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.csw.android.videofloatwindow.player.window.FloatWindowMoveView
        android:id="@+id/moveView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/videoContainer"
        android:layout_alignTop="@+id/videoContainer" />

</RelativeLayout>